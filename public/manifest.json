{
  "manifest_version": 3,
  "name": "Quick Notes",
  "version": "1.0.0",
  "description": "A beautiful and simple note-taking extension for quick thoughts and reminders",
  "permissions": [
    "storage",
    "commands"
  ],
  "action": {
    "default_title": "Quick Notes",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "open-quick-notes": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y",
        "mac": "Command+Shift+Y"
      },
      "description": "Open Quick Notes"
    }
  }
}